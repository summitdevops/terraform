variable "subscription-id" {
	type = string
    description = "The subscription-id of a service principal in the owner role for the subscription"
}

variable "client-id" {
	type = string
    description = "The client-id of a service principal in the owner role for the subscription"
}

variable "tenant-id" {
	type = string
    description = "The tenant-id of a service principal in the owner role for the subscription"
}

variable "client-secret" {
	type = string
    description = "The secret key (password) of a service principal in the owner role for the subscription"
}

